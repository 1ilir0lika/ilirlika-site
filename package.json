  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:vue": "vite",
    "dev:blog": "vitepress dev blog --port 5174",
    "build": "vue-tsc -b && vite build && npm run build:blog && npm run copy:blog",
