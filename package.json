    "copy:blog": "cp -r blog/.vitepress/dist ./public/blog",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "@vercel/analytics": "^1.5.0",
    "tailwindcss": "^4.1.8",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.1.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vitepress": "^1.6.3",
    "vitepress-plugin-comment-with-giscus": "^1.1.15",
    "vue-tsc": "^2.2.8"
  }
}
